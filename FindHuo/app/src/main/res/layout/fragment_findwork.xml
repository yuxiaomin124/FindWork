<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_findworke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_findwork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_findwork_find"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="找零工"/>

                    <TextView
                        android:id="@+id/tv_findwork_do"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="干零活"/>
                </LinearLayout>
            </RelativeLayout>


            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager_findworke"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:id="@+id/ll_findworke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-25dp"
                android:gravity="center"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新发布"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />

            <com.jinyuankeji.yxm.findhuo.tools.SVL
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_findwrke_decalre_new"></com.jinyuankeji.yxm.findhuo.tools.SVL>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门分类"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>

            <com.jinyuankeji.yxm.findhuo.tools.SVG
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:id="@+id/gv_findworke_hot"/>



        </LinearLayout>
    </ScrollView>
</LinearLayout>